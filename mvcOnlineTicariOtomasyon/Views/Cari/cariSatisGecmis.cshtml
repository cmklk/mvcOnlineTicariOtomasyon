@using mvcOnlineTicariOtomasyon.Models.siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "cariSatisGecmis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="my-4">CARİ SATIŞ GEÇMİŞİ</h2>

<ol class="breadcrumb">
    <li class="breadcrumb-item">CARİ ADI : <strong>@ViewBag.deger1</strong></li>
</ol>



<table class="table table-hover">
    <thead>
        <tr>
            <th>SATIŞ ID</th>
            <th>TARİH</th>
            <th>ADET</th>
            <th>FİYAT</th>
            <th>TOPLAM TUTAR</th>
            <th>CARİ</th>
            <th>PERSONEL</th>
            <th>ÜRÜN</th>
            <th>YAZDIR</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.SatisId</td>
                <td>@Convert.ToDateTime(x.Tarih).ToString("dd/MM/yyyy")</td>
                <td>@x.Adet</td>
                <td>@x.Fiyat</td>
                <td>@x.ToplamTutar</td>
                <td>@x.Cariler.CariAd @x.Cariler.CariSoyad</td>
                <td>@x.personel.personelAd @x.personel.personelSoyad</td>
                <td>@x.urunler.UrunAd</td>
                <td><a href="#" class="btn btn-primary text-white">Yazdır</a></td>
            </tr>
        }
    </tbody>
</table>