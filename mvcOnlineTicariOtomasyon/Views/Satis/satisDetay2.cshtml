@using mvcOnlineTicariOtomasyon.Models.siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "satisDetay2";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>SATIŞ DETAY PANELİ</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>SATIŞ ID</th>
            <th>ÜRÜN</th>
            <th>CARİ</th>
            <th>PERSONEL</th>
            <th>ADET</th>
            <th>FİYAT</th>
            <th>TOPLAM</th>
            <th>TARİH</th>
          
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.SatisId</td>
                <td>@x.urunler.UrunAd</td>
                <td>@x.Cariler.CariAd @x.Cariler.CariSoyad</td>
                <td>@x.personel.personelAd @x.personel.personelSoyad</td>
                <td>@x.Adet</td>
                <td>@x.Fiyat</td>
                <td>@x.ToplamTutar</td>
                <td>@Convert.ToDateTime(x.Tarih).ToString("dd-MM-yyyy")</td>
               
            </tr>

        }
    </tbody>
</table>

<a href="/Satis/satisEkle" class="btn btn-primary">YAZDIR</a>
