@using mvcOnlineTicariOtomasyon.Models.siniflar;
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="my-4">SATIŞ LİSTESİ</h2>

<table id="tbl1" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>SATIŞ ID</th>
            <th>ÜRÜN</th>
            <th>CARİ</th>
            <th>PERSONEL</th>
            <th>ADET</th>
            <th>FİYAT</th>
            <th>TOPLAM</th>
            <th>TARİH</th>
            <th>DETAYLAR</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.SatisId</td>
                <td>@x.urunler.UrunAd</td>
                <td>@x.Cariler.CariAd @x.Cariler.CariSoyad</td>
                <td>@x.personel.personelAd</td>
                <td>@x.Adet</td>
                <td>@x.Fiyat</td>
                <td>@x.ToplamTutar</td>
                <td>@Convert.ToDateTime(x.Tarih).ToString("dd-MM-yyyy")</td>
                
                <td><a href="/Satis/satisDetay2/@x.SatisId" class="btn btn-info">DETAYLAR</a></td>
            </tr>

        }
    </tbody>
</table>

<a href="/Satis/satisEkle" class="btn btn-primary">YENİ SATIŞ EKLE</a>



<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>




<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>