@model IEnumerable<mvcOnlineTicariOtomasyon.Models.siniflar.SinifGrup3>
<!-- /.card-header -->
<div class="card-body p-0">
    <table class="table">
        <thead>
            <tr>
                <th style="width: 10px">#</th>
                <th>MARKA</th>
                <th>ProgressBar</th>
                <th style="width: 40px">ORAN</th>
            </tr>
        </thead>
        <tbody>
            @{var sirano = 0;}

            @foreach (var x in Model)
            {
                <tr>
                    <td>@{sirano++;} @sirano</td>
                    <td>@x.Marka</td>
                    <td>
                        @if (x.sayi == 1)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-warning" style="width: 35%"></div>
                            </div>
                        }


                        @if (x.sayi == 2)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-success" style="width: 45%"></div>
                            </div>
                        }


                    </td>
                    <td><span class="badge bg-danger">@x.sayi</span></td>
                </tr>
            }


        </tbody>
    </table>
</div>